header(class="header")
  div(class="header-vuale")
  div(class="header-body container")
    h1(class="animated fadeIn")
      span
        i(class="me-3 bi" class=icon)
        | #{ header }
    nav(class="header-nav container")
      ul(class="animated fadeIn")
        each item in pages
          li
            a(
              href="/" + item.page + ".html",
              class=(item.page === page ? "active" : "")
            )= item.title

  div(class="header-waves")
    svg(class="waves", xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", viewBox="0 24 150 40", preserveAspectRatio="none", shape-rendering="auto")
      defs
        path(id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z")
      g(class="moving-waves")
        use(xlink:href="#gentle-wave", x="48", y="-1")
        use(xlink:href="#gentle-wave", x="48", y="3")
        use(xlink:href="#gentle-wave", x="48", y="5")
        use(xlink:href="#gentle-wave", x="48", y="8")
        use(xlink:href="#gentle-wave", x="48", y="13")
        use(xlink:href="#gentle-wave", x="48", y="16")
